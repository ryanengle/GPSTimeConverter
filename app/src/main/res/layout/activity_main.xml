<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Full screen -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First Row: Radio Group for GPS Epoch Selection -->
            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/radio_1980"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/epoch1980"
                    android:checked="true"/>
                <RadioButton android:id="@+id/radio_1999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/epoch1999" />
                <RadioButton android:id="@+id/radio_2019"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/epoch2019"/>
                <RadioButton android:id="@+id/radio_2038"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/epoch2038"/>
            </RadioGroup>

            <!--Second row: GPS Week-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="95dp"
                    android:text="@string/GpsWeek"/>
                <EditText
                    android:id="@+id/edTxtGpsWeek"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="numberDecimal"/>
            </LinearLayout>

            <!-- Third Row: GPS Seconds-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="95dp"
                    android:text="@string/GpsWeek"/>
                <EditText
                    android:id="@+id/edTxtGpsSeconds"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="numberDecimal"/>
            </LinearLayout>

            <!-- Fourth row -->
            <Button
                android:id="@+id/butCalculate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Calculate"/>

            <!-- Fifth Row: Result -->
            <TextView
                android:id="@+id/txtViewResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="0"/>


        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>